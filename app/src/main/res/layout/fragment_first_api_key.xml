<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    tools:context=".FirstFragmentApiKey">


    <EditText
        android:id="@+id/apiKey"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/background_api_key_button_only_border"
        android:text="@string/api_key"
        android:textColor="#ED2C2929"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/enterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="339dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/background_enter_button"
        android:backgroundTint="#ED2C2929"
        android:elevation="5dp"
        android:text="@string/enter_button"
        android:onClick="checkWeather"
        android:textStyle="normal"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apiKey" />
</androidx.constraintlayout.widget.ConstraintLayout>